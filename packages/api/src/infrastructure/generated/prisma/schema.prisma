// ─────────────────────────────────────────────────────────────
// MiGestion - Prisma Schema
// Multi-tenant SaaS CRM Database Model
// ─────────────────────────────────────────────────────────────

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ─────────────────────────────────────────────────────────────
// TENANT (Company/Organization)
// ─────────────────────────────────────────────────────────────
model Tenant {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(100)
  slug      String   @unique @db.VarChar(50)
  status    String   @default("active") @db.VarChar(20)
  settings  Json?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  users         User[]
  clients       Client[]
  interactions  Interaction[]
  segments      Segment[]
  notifications Notification[]
  auditLogs     AuditLog[]

  @@index([status])
  @@index([slug])
  @@map("tenants")
}

// ─────────────────────────────────────────────────────────────
// USER (Employee/Team Member)
// ─────────────────────────────────────────────────────────────
model User {
  id           String    @id @default(uuid())
  tenantId     String    @map("tenant_id")
  email        String    @db.VarChar(255)
  passwordHash String    @map("password_hash") @db.VarChar(255)
  firstName    String    @map("first_name") @db.VarChar(100)
  lastName     String    @map("last_name") @db.VarChar(100)
  role         String    @default("user") @db.VarChar(20)
  status       String    @default("active") @db.VarChar(20)
  avatarUrl    String?   @map("avatar_url") @db.VarChar(500)
  lastLoginAt  DateTime? @map("last_login_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // Relations
  tenant          Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  refreshTokens   RefreshToken[]
  assignedClients Client[]       @relation("AssignedUser")
  interactions    Interaction[]
  notifications   Notification[]
  auditLogs       AuditLog[]

  @@unique([tenantId, email])
  @@index([tenantId, status])
  @@index([tenantId, role])
  @@map("users")
}

// ─────────────────────────────────────────────────────────────
// REFRESH TOKEN
// ─────────────────────────────────────────────────────────────
model RefreshToken {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  tokenHash String    @unique @map("token_hash") @db.VarChar(255)
  expiresAt DateTime  @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

// ─────────────────────────────────────────────────────────────
// CLIENT (Customer/Lead)
// ─────────────────────────────────────────────────────────────
model Client {
  id           String   @id @default(uuid())
  tenantId     String   @map("tenant_id")
  assignedToId String?  @map("assigned_to_id")
  companyName  String   @map("company_name") @db.VarChar(200)
  contactName  String   @map("contact_name") @db.VarChar(200)
  email        String?  @db.VarChar(255)
  phone        String?  @db.VarChar(20)
  status       String   @default("prospect") @db.VarChar(20)
  segment      String?  @db.VarChar(50)
  tags         Json?
  customFields Json?    @map("custom_fields")
  address      String?  @db.VarChar(500)
  notes        String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  tenant       Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  assignedTo   User?         @relation("AssignedUser", fields: [assignedToId], references: [id], onDelete: SetNull)
  interactions Interaction[]

  @@index([tenantId, status])
  @@index([tenantId, segment])
  @@index([tenantId, assignedToId])
  @@index([tenantId, companyName])
  @@map("clients")
}

// ─────────────────────────────────────────────────────────────
// INTERACTION (Activity/Touchpoint)
// ─────────────────────────────────────────────────────────────
model Interaction {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  clientId  String   @map("client_id")
  userId    String   @map("user_id")
  type      String   @db.VarChar(20)
  notes     String?
  metadata  Json?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId, clientId])
  @@index([tenantId, userId])
  @@index([tenantId, createdAt])
  @@index([tenantId, type])
  @@map("interactions")
}

// ─────────────────────────────────────────────────────────────
// SEGMENT (Client Grouping)
// ─────────────────────────────────────────────────────────────
model Segment {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  name      String   @db.VarChar(100)
  criteria  Json?
  color     String?  @db.VarChar(7)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name])
  @@index([tenantId])
  @@map("segments")
}

// ─────────────────────────────────────────────────────────────
// NOTIFICATION
// ─────────────────────────────────────────────────────────────
model Notification {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  userId    String   @map("user_id")
  type      String   @db.VarChar(50)
  title     String   @db.VarChar(200)
  message   String?
  data      Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId, userId])
  @@index([userId, read])
  @@index([userId, createdAt])
  @@map("notifications")
}

// ─────────────────────────────────────────────────────────────
// AUDIT LOG
// ─────────────────────────────────────────────────────────────
model AuditLog {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  userId    String?  @map("user_id")
  action    String   @db.VarChar(50)
  entity    String   @db.VarChar(50)
  entityId  String?  @map("entity_id")
  oldValues Json?    @map("old_values")
  newValues Json?    @map("new_values")
  ipAddress String?  @map("ip_address") @db.VarChar(45)
  userAgent String?  @map("user_agent") @db.VarChar(500)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([tenantId, createdAt])
  @@index([tenantId, entity])
  @@index([tenantId, userId])
  @@map("audit_logs")
}
